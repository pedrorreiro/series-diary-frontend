{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["vite-env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@stores/*": ["./src/stores/*"],
      "@views/*": ["./src/views/*"],
      "@services/*": ["./src/services/*"],
      "@enums/*": ["./src/enums/*"]
    }
  }
}
